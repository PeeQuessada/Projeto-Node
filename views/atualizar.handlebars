<form action="/atualizar" method="POST">
    {{#each posts}}
        <input type="text" name="id" value="{{dataValues.id}}" hidden/>
        <p>Titulo: </p>
        <input type="text" name="titulo" value="{{dataValues.titulo}}"/>
        <p>Conteudo: </p>
        <textarea name="conteudo">{{dataValues.conteudo}}</textarea>
        <br />
        <button type="submit" style="margin-top: 15px;">Atualizar Postagem</button>
    {{/each}}
</form>
